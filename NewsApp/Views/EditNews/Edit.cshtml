@model NewsApp.ViewModels.EditNewsViewModel
@{
    ViewBag.Title = "Редактирование новости";
}
    <form asp-action="Edit" asp-controller="EditNews">
        <div asp-validation-summary="All" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="Title" class="control-label">Заголовок</label>
            <input type="text" asp-for="Title" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="Author" class="control-label">Автор</label>
            <input type="text" asp-for="Author" class="form-control" />
        </div>
        <div class="form-group">
            <label class="control-label">Категория</label>
            <select name="categoryId" class="form-control">
                <option selected="selected">Выберите категорию</option>
                @foreach (var category in Model.Categories)
                {
                    <option value="@category.Id">@category.Name</option>
                }
            </select>
        </div>
        <div class="form-group">
            <label asp-for="Text" class="control-label">Текст</label>
            <textarea asp-for="Text" class="form-control" rows="15"></textarea>
        </div>
        <div class="form-group">
            <input type="submit" value="Сохранить" class="btn btn-outline-secondary" />
        </div>
    </form>
