@model IEnumerable<NewsApp.Models.Article>
@{
    ViewBag.Title = "Список новостей";
}

<a class="btn btn-success" asp-action="Create">Добавить новость</a>

<table class="table">
    @foreach (var article in Model)
    {
        <tr>
            <td>@article.Title</td>
            <td>
                <form asp-action="Delete" asp-route-id="@article.Id" method="post">
                    <a class="btn btn-sm btn-primary" asp-action="Edit" asp-route-id="@article.Id">Изменить</a>
                    <button type="submit" class="btn btn-sm btn-danger">Удалить</button>
                </form>
            </td>
        </tr>
    }
</table>
